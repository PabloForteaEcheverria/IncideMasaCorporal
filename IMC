
public class IndicMasaCorporal {

 

	public static void main(String[] args) {
		/**
		 * Aqui en el Metodo  principal creamos el objeto 'persona' con 
		 * los atributos 60 y 1.61 de peso y altura respectivamente.
		 */
		Persona persona = new Persona(60,1.61);
		/**
		 *Llamamos al metodo calculoIMC para aplicarlo a ese objeto 
		 */
		persona.calculoIMC();
		/**
		 * llamamos al metodo mensaje, para que nos devuelva el
		 * mensaje personalizado de acuerdo a los valores del objeto creado.
		 */
		System.out.println(persona.mensaje());

	}

}
